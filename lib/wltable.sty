% Table Header
\newcommand{\header}[1]{{
	\par\vspace*{8pt}
	\noindent
	\wl@TableTitleFont
	#1}}

% Centered Column
\newcolumntype{Y}{>{\centering\arraybackslash}X}

% Table Environment
\NewDocumentEnvironment{wltable}{O{XX} O{tablecolor}}{%
    \par\vspace*{8pt}
    \noindent
    \wl@TableBodyFont
    \rowcolors{1}{}{#2}
    \tabularx{\linewidth}{#1}
  }{%
    \endtabularx
    \vspace{8pt plus 1pt}
    \noindent
  }

\newenvironment{wlitemtable}[1][XX]{%
    \wl@deprecate{wlitemtable}{0.7}[Set tablecolor and use wltable instead.]
    \par\vspace*{8pt}
    \noindent
    \wl@TableBodyFont
    \rowcolors{1}{}{DmgCoral}
    \tabularx{\linewidth}{#1}
  }{%
    \endtabularx
    \vspace{8pt plus 1pt}
    \noindent
  }
